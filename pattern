1.pattern

import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		
		for(int row=0;row<=a-1;row++){
		    for(int col=0;col<=a-row-1;col++){
		        System.out.print(" ");
		    }
		    for(int col=0;col<=row;col++){
		        System.out.print("*  ");
		        
		    }
		    System.out.println();
		    
		    }
		}
}
